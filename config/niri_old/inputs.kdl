input {
    keyboard {
        xkb {
            layout "us,it"
            options "grp:menu_toggle"
        }
        // Enable numlock on startup, omitting this setting disables it.
        numlock
    }
    touchpad {
        // off
        tap
        // dwt
        // dwtp
        // drag false
        // drag-lock
        natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
